<%= simple_form_for @competition_tab, url: submit_url, html: { class: "competition-tab-form" } do |f| %>
  <%= f.input :name %>
  <%= f.input :content, input_html: { class: "markdown-editor" } %>

  <div class="buttons">
    <div class="buttons-left">
      <%= f.submit submit_text, class: "btn btn-primary" %>
    </div>
    <div class="buttons-right">
      <%= link_to icon("undo", t('competition_tabs.form_elements.back_to_tabs')), competition_tabs_path, class: "btn btn-default" %>
      <%= buttons if defined?(buttons) %>
    </div>
  </div>
<% end %>
